    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./lpc55-hal/target/thumbv8m.main-none-eabi/debug/examples/led_utick",
            "name": "Debug JLINK",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "host.docker.internal:2331",
            // "serverpath": "C:/Program Files (x86)/SEGGER/JLink/JLinkGDBServerCL.exe",
            // "armToolchainPath": "/opt/gcc-arm-none-eabi-10.3-2021.10/bin/",
            "device": "LPC55S28JBD100",
            "interface": "swd",
            "serialNumber": "", // add J-Link serial number if having multiple attached the same time.
            "runToEntryPoint": "main",
            "svdFile": "${workspaceRoot}/lpc55s28.svd",
            "preLaunchCommands": [
                "monitor reset",
                "del breakpoints",
                "monitor flash erase",
                "monitor semihosting enable",
                "monitor semihosting IOClient 3" 
            ],
            // "preLaunchTask": "build_software_lpc",
            // "rtos": "FreeRTOS",
            // "showDevDebugOutput": true
        }
    ]
}